<?xml version="1.0" encoding="utf-8"?>
<ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <com.google.android.material.card.MaterialCardView
                    app:cardBackgroundColor="?android:attr/colorBackground"
                    android:layout_width="match_parent"
                    android:id="@+id/themeSetting"
                    app:cardCornerRadius="0dp"
                    app:strokeWidth="0dp"
                    android:layout_height="64dp">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_light"
                            android:text="start+theme"
                            android:textSize="24sp"
                            android:textStyle="bold"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_light"
                            android:text="customize your phone"
                            android:textSize="16sp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                    app:cardBackgroundColor="?android:attr/colorBackground"
                    android:layout_width="match_parent"
                    android:id="@+id/feedbackSetting"
                    app:cardCornerRadius="0dp"
                    app:strokeWidth="0dp"
                    android:layout_height="64dp" android:layout_marginTop="12dp">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_light"
                            android:text="feedback"
                            android:textSize="24sp"
                            android:textStyle="bold"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_light"
                            android:text="help me improve MetroPhoneLaucnher"
                            android:textSize="16sp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                    app:cardBackgroundColor="?android:attr/colorBackground"
                    android:layout_width="match_parent"
                    android:id="@+id/aboutSetting"
                    app:cardCornerRadius="0dp"
                    app:strokeWidth="0dp"
                    android:layout_height="64dp" android:layout_marginTop="12dp">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_light"
                            android:text="about"
                            android:textSize="24sp"
                            android:textStyle="bold"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_light"
                            android:text="information about your phone"
                            android:textSize="16sp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
</ScrollView>